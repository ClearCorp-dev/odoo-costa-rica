<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_payroll_by_periods_employee_form" model="ir.ui.view">
            <field name="name">Payroll Report Employee</field>
            <field name="model">l10n.cr.hr.payroll.by.periods.employee</field>
            <field name="arch" type="xml">
                <form string="Report employee by periods" version="7.0">
                    <group string="General Options">
                        <field name="company_id" attrs="{'required':True}" />
                    </group>
                    <group string="Filters">
                        <group>
                            <field name="filter" required="True"/>
                            <field name="format" required="True" />
                        </group>
                        <group>
                            <field name="period_from" 
                                attrs="{'required': [('filter', '=', 'period')], 'invisible': [('filter', '!=', 'period')]}"
                                domain="[('company_id', '=', company_id)]" />
                            <field name="period_to"
                                attrs="{'required': [('filter', '=', 'period')], 'invisible': [('filter', '!=', 'period')]}"
                                domain="[('company_id', '=', company_id)]" />
                            <field name="date_from"
                                attrs="{'required': [('filter', '=', 'date')], 'invisible': [('filter', '!=', 'date')]}"/>
                            <field name="date_to"
                                attrs="{'required': [('filter', '=', 'date')], 'invisible': [('filter', '!=', 'date')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print"
                            type="object" class="oe_highlight" /> or
                        <button string="Cancel" class="oe_link"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payroll_by_periods_employee" model="ir.actions.act_window">
            <field name="name">Payroll Report Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">l10n.cr.hr.payroll.by.periods.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_payroll_by_periods_employee_form" />
            <field name="target">new</field>
        </record>
    </data>
</openerp>
